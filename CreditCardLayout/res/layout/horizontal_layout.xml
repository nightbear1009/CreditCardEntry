<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <com.nineyi.creditcardbase.CreditCardNumberView
        android:id="@+id/creditcard_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </com.nineyi.creditcardbase.CreditCardNumberView>

    <TextView
        android:id="@+id/four_digit"
        android:layout_gravity="left|center_vertical"
        android:paddingRight="20dp"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.nineyi.creditcardbase.ExpDateText
        android:id="@+id/expire_date"
        android:layout_gravity="left|center_vertical"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="20dp">
    </com.nineyi.creditcardbase.ExpDateText>

    <com.nineyi.creditcardbase.SecurityCodeText
        android:id="@+id/security_code"
        android:background="@null"
        android:layout_gravity="left|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </com.nineyi.creditcardbase.SecurityCodeText>
    
    <TextView 
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        />

</LinearLayout>